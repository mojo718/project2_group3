{{#if isLoggedIn}}
<div class="row text-center">
  <h1>{{manager.name}}'s Team</h1>
</div>

<button id="deleteAccountButton" class="btn btn-danger">Delete Account</button>

<button id="addPlayerButton" class="btn btn-primary">Add Player</button>

<form id="playerForm" class="bg-light">
  <div class="mb-3">
    <h2>Add a Player</h2>
    <label for="addName" class="form-label">Player Name</label>
    <input type="text" class="form-control" id="addName">
  </div>
  <div class="mb-3">
    <label for="addPosition" class="form-label">Player Position</label>
    <input type="text" class="form-control" id="addPosition">
  </div>
  <div class="mb-3">
    <label for="addBattingAverage" class="form-label">Batting Average</label>
    <input type="text" class="form-control" id="addBattingAverage">
  </div>
  <div class="mb-3">
    <label for="addHomeRuns" class="form-label">Home Runs</label>
    <input type="text" class="form-control" id="addHomeRuns">
  </div>
  <div class="mb-3">
    <label for="addHits" class="form-label">Hits</label>
    <input type="text" class="form-control" id="addHits">
  </div>
  <div class="mb-3">
    <label for="addRBIs" class="form-label">RBIs</label>
    <input type="text" class="form-control" id="addRBIs">
  </div>
  <button type="submit" class="btn btn-danger">Submit</button>
</form>


<div id="playerList">
  {{#each players}}
    <div class="player" data-player-id="{{ id }}">
      <p>Name: {{ name }}</p>
      <p>Position: {{ position }}</p>
      <p>Batting Average: {{ battingAverage }}</p>
      <p>Home Runs: {{ homeRuns }}</p>
      <p>Hits: {{ hits }}</p>
      <p>RBIs: {{ rbis }}</p>
    </div>
  {{/each}}
</div>
{{/if}}

<script src="./js/profile.js"></script>
