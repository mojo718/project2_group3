{{#if players.length }}
<div class="row text-center">
  <h1>Your Team</h1>
</div>
<div class="row">
  <table class="table table-hover table-primary table-striped">
  <thead>
    <tr>
      <th scope="col">Position</th>
      <th scope="col">Name</th>
      <th scope="col">Hits</th>
      <th scope="col">Avg</th>
      <th scope="col">HRs</th>
      <th scope="col">RBIs</th>
    </tr>
  </thead>
  <tbody>

    {{#each players as |player| }}
    <tr>
      <th scope="row">{{player.position}}</th>
      <td>{{player.name}}</td>
      <td>{{player.hits}}</td>
      <td>{{player.battingAverage}}</td>
      <td>{{player.homeRuns}}</td>
      <td>{{player.rbis}}</td>
    </tr>
    {{/each}}

  </tbody>
</table>
</div>
{{else}}
<div class="row text-center">
  <h1 style="color:red">No Players on your team. Please go to /profile and add players first.</h1>
</div>
{{/if}}

