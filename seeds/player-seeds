const { Player } = require('./models'); // Import the Player model

async function seed() {
  try {
    // Seed data for players
    const playersData = [
      {
        name: 'John Smith',
        Team_id: 1,
        Position: 'Catcher',
        BattingAverage: 0.289,
        HomeRuns: 12,
        Hits: 100,
        RBIS: 45
      },
      {
        name: 'Mike Johnson',
        Team_id: 2,
        Position: 'First Base',
        BattingAverage: 0.312,
        HomeRuns: 20,
        Hits: 110,
        RBIS: 60
      },
      {
        name: 'Sarah Brown',
        Team_id: 3,
        Position: 'Shortstop',
        BattingAverage: 0.275,
        HomeRuns: 8,
        Hits: 90,
        RBIS: 32
      },
      // add more players 
    ];

    // Create players using Sequelize's bulkCreate method
    const createdPlayers = await Player.bulkCreate(playersData);
    console.log(`${createdPlayers.length} players created successfully.`);
  } catch (error) {
    console.error('Error seeding players:', error);
  } finally {
    // Close database connection
    await sequelize.close();
  }
}
